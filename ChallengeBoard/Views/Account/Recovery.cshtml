@model ChallengeBoard.Models.RegisterModel

@{
    ViewBag.Title = "Password Recovery";
}

@Html.Partial("_HeaderPartial", new ChallengeBoard.Infrastucture.PageHeader("Password Recovery"))
@using (Html.BeginForm("RequestRecovery", "Account", FormMethod.Post, new { @class = "well form-horizontal" }))
{
    <fieldset>
        <legend>Enter your email address to recover your password</legend>
        <div class="control-group">
            @Html.LabelFor(m => m.EmailAddress, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.EmailAddress, new { autofocus = "" })
                @Html.ValidationMessageFor(m => m.EmailAddress)
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" id="Delete" class="btn btn-primary">Recover Password</button>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}