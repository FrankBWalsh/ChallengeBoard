@model ChallengeBoard.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

@Html.Partial("_HeaderPartial", new ChallengeBoard.Infrastucture.PageHeader("Log into the Challenge Board"))
@Html.Partial("_ValidationSummary", ViewData.ModelState)
<div class="row">
    <div class="span6">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {@class="well"}))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend>Use a site account to log in</legend>
                    <div class="control-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="control-group">

                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        <div class="controls">
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <label class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe) @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Log in</button>
                        &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                        @Html.ActionLink("Register", "Register") or @Html.ActionLink("Recover", "Recovery") an account.
                    </div>
                </fieldset>
            }
        </section>
    </div>
    <div class="span6">
        <section id="socialLoginForm">
            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/components")
}
